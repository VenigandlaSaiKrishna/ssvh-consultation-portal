@{
    Layout = "_LayoutCustom";
    ViewData["Title"] = "Access Denied Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header card-header-ad text-center">
                    <h3>Access Denied!!!</h3>
                </div>
                <div class="card-body">
                    <p class="ad-text">You do not have permission to access this page. Please contact the administrator if you believe this is an error.</p>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>Have an account? <a asp-area="" asp-controller="Login" asp-action="Index" class="text-decoration-none">Login</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
