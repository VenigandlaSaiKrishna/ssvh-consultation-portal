@model SSVH_Consultation_Poratl.Models.Class

@{
    ViewData["Title"] = "Delete Class";
}



<div class="row">
    <div class="col-12">
        <div class="custom-table">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center mb-3">Delete Class</h1>
                </div>
            </div>
            <div>
                <dl class="row">
                    <div class="col-3"></div>
                    <div class="col-6">
                        <h4 class="text-center mb-2">Are you sure you want to delete this class?</h4>
                        <hr />
                        <div class="row">
                            <table class="table table-striped table-responsive table-hover">
                                <tbody>
                                    <tr>
                                        <th scope="row" class="w-50">Academic Year</th>
                                        <td>@Model.AcadamicYear</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="w-50">Name</th>
                                        <td>@Model.Name</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="w-50">Academic Fees</th>
                                        <td>@Model.AcadamicFees</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="w-50">Books Amount</th>
                                        <td>@Model.BooksAmount</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="col-12">
                                <div class="form-group" style="display:flex; float:right">
                                    <a class="btn btn-outline-primary me-2" asp-action="Index">Back to List</a>
                                    <form asp-action="Delete" method="post">
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            <input type="submit" value="Delete" class="btn btn-outline-danger" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-3"></div>
                </dl>
            </div>
        </div>
    </div>
</div>