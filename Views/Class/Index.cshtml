@model IEnumerable<Class>
@{
    ViewData["Title"] = "Class List";
}

<div class="row">
    <div class="col-12">
        <div class="" style="float:right; margin-bottom:15px">
            <a asp-action="Create" class="btn btn-outline-primary">
                Create New Class
            </a>
        </div>
    </div>
</div>

<div class="custom-table">
    <table id="classTable" class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>AcadamicYear</th>
                <th>Name</th>
                <th>Acadamic Fees</th>
                <th>Books Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AcadamicYear</td>
                    <td>@item.Name</td>
                    <td>@item.AcadamicFees</td>
                    <td>@item.BooksAmount</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var table = $('#classTable').DataTable({
                dom: 'lrtip'
            });
        });
    </script>
}