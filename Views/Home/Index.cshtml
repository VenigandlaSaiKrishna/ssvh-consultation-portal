@model IEnumerable<Consultation>
@{
    ViewData["Title"] = "Consultation List";
}

<style>
    @@media print {
        body {
            text-align: left !important;
            font-size: 12px;
        }

        table {
            /* margin: auto; /* Center table */ */
            width: 100%;
        }
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="" style="float:right; margin-bottom:15px">
            <a asp-action="Create" class="btn btn-outline-primary">
                Create New Consultation
            </a>
        </div>
    </div>
</div>

<div class="custom-table">
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Academic Year</th>
                <th>Class Name</th>
                <th>Student Name</th>
                <th>Parent Name</th>
                <th>Mobile</th>
                <th>Estimated Fees</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AcadamicYear</td>
                    <td>@item.ClassName</td>
                    <td>@item.StudentName</td>
                    <td>@item.ParentName</td>
                    <td>@item.Mobile</td>
                    <td>
                        @{
                            decimal? fullAmount = 0M;
                            if (item.AcadamicFees > 0)
                                fullAmount += item.AcadamicFees;
                            if (item.AdmissionFees > 0)
                                fullAmount += item.AdmissionFees;
                            if (item.BeltTieSocksAmount > 0)
                                fullAmount += item.BeltTieSocksAmount;
                            if (item.BooksAmount > 0)
                                fullAmount += item.BooksAmount;
                            if (item.TransportAmount > 0)
                                fullAmount += item.TransportAmount;
                            if (item.UniformAmount > 0)
                                fullAmount += item.UniformAmount;
                            if (item.IsAcadamicFeesDiscount)
                                fullAmount -= item.AcadamicFeesDiscount;

                            <span>@fullAmount</span>
                        }
                    </td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id">Edit</a> |
                        <a href="javascript:void(0)" onclick="printReceipt(@item.Id)" class="btn btn-outline-info">Print</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function printReceipt(consultationId) {
            fetch(`/Home/Print/${consultationId}`, { method: 'POST' })
                .then(response => response.blob())
                .then(blob => {
                    var url = window.URL.createObjectURL(blob);
                    var printWindow = window.open(url);
                    setTimeout(() => {
                        printWindow.print();
                    }, 10);
                })
                .catch(error => console.error('Error printing:', error));
        }
    </script>
}